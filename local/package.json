{
  "name": "stoic-mcp-local",
  "version": "1.0.0",
  "description": "Local MCP server for Stoic quotes with JSON storage",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "npm run build --if-present && node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist",
    "import": "npm run build && node dist/import-quotes.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "stoicism",
    "quotes",
    "local"
  ],
  "author": "Tim Warner",
  "license": "MIT"
}
